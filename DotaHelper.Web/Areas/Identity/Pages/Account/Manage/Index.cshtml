@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
}

<section class="w-75 m-auto">
    @if (!(Model.FavoritedGuides.Any() && Model.PostedGuides.Any()))
    {
        <h1 class="text-white text-center">No favorited or posted guides yet.</h1>
    }

    @if (Model.FavoritedGuides.Any())
    {
        <h1 class="text-white">Favorited guides:</h1>
        @foreach (var guide in Model.FavoritedGuides)
        {
            <div>
                <div class="d-inline-block">
                    <img src=@guide.HeroImageUrl alt=@guide.HeroId />
                </div>
                <div class="d-inline-block">
                    <h1><a class="text-white" asp-action="Details" asp-route-id=@guide.Id>@guide.Title</a></h1>
                </div>
                <div class="d-inline-block">
                    @foreach (var item in guide.Items)
                    {
                        @await Html.PartialAsync("GuidePartial", item);
                    }
                </div>
            </div>
        }
    }

    @if (Model.PostedGuides.Any())
    {
        <h1 class="text-white">Posted guides:</h1>
        @foreach (var guide in Model.PostedGuides)
        {
            <div>
                <div class="d-inline-block">
                    <img src=@guide.HeroImageUrl alt=@guide.HeroId />
                </div>
                <div class="d-inline-block">
                    <h1><a class="text-white" asp-action="Details" asp-route-id=@guide.Id>@guide.Title</a></h1>
                </div>
                <div class="d-inline-block">
                    @foreach (var item in guide.Items)
                    {
                        @await Html.PartialAsync("GuidePartial", item);
                    }
                </div>
            </div>
        }
    }
</section>

