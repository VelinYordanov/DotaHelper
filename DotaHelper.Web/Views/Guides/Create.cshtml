@model DotaHelper.Models.PostModels.GuidePostDataModel

<h2>Submit a guide</h2>
@using (Html.BeginForm("Create", "Guides", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <div class="form-group">
        <label class="control-label col-sm-2" for="hero">Hero:</label>
        <div class="col-sm-10">
            @Html.ValidationMessageFor(x => x.HeroId)
            <select id="hero" name="heroId">
                @foreach (var hero in Model.HeroIdsToNames)
                {
                    <option value=@hero.Key>@hero.Value</option>
                }
            </select>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" for="title">Title:</label>
        <div class="col-sm-10">
            @Html.ValidationMessageFor(x => x.Title)
            <input type="text" class="form-control" id="title" placeholder="Enter title" name="title">
        </div>
    </div>
    for (int i = 1; i <= 6; i++)
    {
        <div class="form-group">
            <label class="control-label col-sm-2" for=@("item"+i)>@("Item " + i)</label>
            <div class="col-sm-10">
                <select id=@("item"+i) name=@("item"+i)>
                    @foreach (var item in Model.ItemIdsToNames)
                    {
                        <option value=@item.Key>@item.Value</option>
                    }
                </select>
                @Html.ValidationMessage("Item" + i)
            </div>
        </div>
    }

    <div class="form-group">
        <label class="control-label col-sm-2" for="text">Text:</label>
        <div class="col-sm-10">
            <textarea rows="30" cols="300" id="text" name="text"></textarea>
        </div>
        @Html.ValidationMessageFor(x => x.Text)
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-success">Submit</button>
        </div>
    </div>
}
