@model GuideListViewModel

<section class="text-center">
    <h1 class="mb-5 text-white">Available guides:</h1>
    @foreach (var guide in this.Model.Guides)
    {
        <div>
            <div class="d-inline-block">
                <img src=@guide.HeroImageUrl alt=@guide.HeroId />
            </div>
            <div class="d-inline-block">
                <h1><a class="text-white" asp-action="Details" asp-route-id=@guide.Id>@guide.Title</a></h1>
            </div>
            <div class="d-inline-block">
                @foreach (var item in guide.Items)
                {
                    <img class="dota-item-image" src="@item.ImageUrl" alt="@item.Name" />
                    <div class="iconTooltip iconTooltip_item dota-item">
                        <div class="itemIcon"><img src="@item.ImageUrl" alt="@item.Name" title="@item.Name"></div>
                        <div class="itemName @item.Quality">@item.Name</div>
                        <div class="goldIcon">
                            <img src="@DotaApiEndpoints.GoldIconUrl" alt="gold icon" />
                        </div>
                        <div class="goldCost">@item.Cost</div>
                        <br clear="left">
                        <div class="description">@Html.Raw(item.Description)</div>
                        <div class="notes">@Html.Raw(item.Notes)</div>
                        <div class="attribs">@Html.Raw(item.Attributes)</div>
                        @if (!(item.ManaCost == "False" && item.Cooldown == "False"))
                        {
                            <div class="cooldownMana">
                                @if (item.ManaCost != "False")
                                {
                                    <div class="mana">
                                        <img alt="Needed mana" title="Needed mana" class="manaImg" src="@DotaApiEndpoints.ManaIconUrl">@item.ManaCost
                                    </div>
                                }
                                @if (item.Cooldown != "False")
                                {
                                    <img alt="Cooldown" title="Cooldown" class="cooldownImg" src="@DotaApiEndpoints.CooldownIconUrl">@item.Cooldown
                                    <br clear="left">
                                    <br clear="left">
                                }
                            </div>
                        }
                        <div class="lore">@item.Lore</div>
                    </div>
                }
            </div>
        </div>
    }

    <nav>
        <ul class="pagination">
            @for (int i = 1; i <= Model.MaxPage; i++)
            {
                <li class="page-item"><a class="page-link" asp-controller="Guides" asp-route-page=@i>@i</a></li>
            }
        </ul>
    </nav>
</section>